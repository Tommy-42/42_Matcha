extends ../layout

block append stylesheet

block content
  h1.text-center Create a new account
  div.row
    div.col-xs-12.col-sm-6.col-sm-offset-3
      form
        div.form-group
          label(for="inputUsername") Username
          input(type="text" name="username")#inputUsername.form-control
        div.form-group
          label(for="inputBirthDay") Birthday
          input(type="date" name="birthday" min="1970-01-01" max="#{moment().subtract(18, 'years').format('YYYY-DD-MM')}" value="#{moment().subtract(18, 'years').format('YYYY-DD-MM')}")#inputBirthDay.form-control
        div.form-group
          label(for="inputSexType") Sex Type
          input(type="text" name="sextype")#inputSexType.form-control
        div.form-group
          label(for="inputEmail") Email
          input(type="text" name="email")#inputEmail.form-control
        div.form-group
          label(for="inputPassword") Password
          input(type="text" name="password")#inputPassword.form-control
        div.form-group
          label(for="inputConfirmPassword") Confirm-Password
          input(type="text" name="confirm_password")#inputConfirmPassword.form-control

block append javascript
  script(src='/javascripts/users/new.js')